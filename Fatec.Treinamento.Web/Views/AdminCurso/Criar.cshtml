                @Html.DropDownListFor(c => c.IdAutor, new SelectList(Model.ListaUsuario, "Id", "Nome"));
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

